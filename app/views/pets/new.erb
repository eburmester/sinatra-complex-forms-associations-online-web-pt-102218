<h1>Create a new Pet</h1>

<form action="/owners" method="POST">
  <label>Name:</label>

  <br>

  <input type="text" name="pet[name]">

  <br>
  
  <label>Choose an existing owner:</label>
 
  <br>
 
  <%@owners.each do |owner|%>
    <input type="checkbox" name="owner[name][]" id="<%=owner.name%>" value="<%=powner.name%>"></input>
  <%end%>
 
  <br>
 
    <label>and/or, create a new owner:</label>
    <br>
    <label>name:</label>
      <input  type="text" name="owner[name]"></input>
    <br>
  <input type="submit" value="Create Owner">
</form>